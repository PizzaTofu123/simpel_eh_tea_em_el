{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "https://raw.githubusercontent.com/PizzaTofu123/simpel_eh_tea_em_el/main/world_bank_development_indicators_cleaned_No_NA_SEA.csv" },
  "params": [
    {
      "name": "Country_selection",
      "value": "Indonesia",
      "bind": {
        "input": "select",
        "options": [
          "Indonesia",
          "World",
          "Vietnam",
          "Thailand",
          "Malaysia",
          "Philippines",
          "Brunei",
          "Myanmar",
          "Thailand",
          "Bangladesh",
          "Sri Lanka",
          "Cambodia",
          "Brunei Darussalam",
          "United States of America",
          "India",
          "China",
          "Japan",
          "United Kingdom",
          "Spain"
        ],
        "labels": [
          "Indonesia",
          "World",
          "Vietnam",
          "Thailand",
          "Malaysia",
          "Philippines",
          "Brunei",
          "Myanmar",
          "Thailand",
          "Bangladesh",
          "Sri Lanka",
          "Cambodia",
          "Brunei Darussalam",
          "United States of America",
          "India",
          "China",
          "Japan",
          "United Kingdom",
          "Spain"
        ],
        "name": "Country selection: "
      }
    },
    {
      "name": "Start_year",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select start year (Population Density) :"
      }
    },
    {
      "name": "End_year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select end year (Population Density)  :"
      }
    },
    {
      "name": "Population_year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select year (Total Population)  :"
      }
    }
  ],
  "hconcat": 
  [{
     "title":"Population density throughout the years",
      "width":500,
      "height": 600,
      "mark": {
        "type": "line",
        "point": {
          "filled": false,
          "fill":"white"
        }
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "population_density",
          "type": "quantitative",
          "title": "Population Density"
        },
        "color": {
          "field": "country",
          "condition": {
            "test": "datum['country'] == 'Indonesia'",
            "value": "red"
          }
        },
        "opacity":{
          "condition":{
            "test": "datum['country'] == Country_selection",
            "value": 1
          },
          "value":0.1
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "population_density", "type": "quantitative", "title":"Population Density"}
        ]
      },
      "transform": [
        {"filter": "datum.year > '1960' && datum.year <= 2020"},
        {"filter": "datum.year >= Start_year && datum.year <= End_year"}
      ]
  }, 
  {
    "title":"Current population (2020)",
    "width":500,
    "height": 600,
    "mark": {
      "type": "bar"
    },
    "encoding": {
      "x": {
        "field": "country",
        "type": "ordinal",
        "sort": "y"
      },
      "y": {
        "field": "population",
        "type": "quantitative"
      },
      "color": {
        "condition":{
          "test": "datum['country'] == Country_selection",
          "value": "#89CFF0"
        },
        "value": "grey"
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "population", "type": "quantitative", "title": "Population"}
      ]
    },
    "transform": [
      {"filter": "datum.year == Population_year"}
    ]
  }
  ]
}