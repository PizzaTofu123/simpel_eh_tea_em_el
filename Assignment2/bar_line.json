{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "https://raw.githubusercontent.com/PizzaTofu123/simpel_eh_tea_em_el/main/world_bank_development_indicators_cleaned_No_NA_SEA.csv" },
  "params": [
    {
      "name": "Country_selection",
      "value": "Indonesia",
      "bind": {
        "input": "select",
        "options": [
          "Indonesia",
          "World",
          "Vietnam",
          "Thailand",
          "Malaysia",
          "Philippines",
          "Brunei",
          "Myanmar",
          "Thailand",
          "Bangladesh",
          "Sri Lanka",
          "Cambodia",
          "Brunei Darussalam",
          "United States of America",
          "India",
          "China",
          "Japan",
          "United Kingdom",
          "Spain"
        ],
        "labels": [
          "Indonesia",
          "World",
          "Vietnam",
          "Thailand",
          "Malaysia",
          "Philippines",
          "Brunei",
          "Myanmar",
          "Thailand",
          "Bangladesh",
          "Sri Lanka",
          "Cambodia",
          "Brunei Darussalam",
          "United States of America",
          "India",
          "China",
          "Japan",
          "United Kingdom",
          "Spain"
        ],
        "name": "Country selection: "
      }
    },
    {
      "name": "Start_year",
      "value": 1995,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select start year (Population Density) :"
      }
    },
    {
      "name": "End_year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select end year (Population Density)  :"
      }
    },
    {
      "name": "Population_year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2020,
        "step": 1,
        "name": "Select year (Total Population)  :"
      }
    }
  ],
  "hconcat": 
  [{
     "title":"Population density throughout the years",
      "width":500,
      "height": 600,
      "layer":[
        {
        "mark": {
          "type": "line",
          "point": {
            "filled": false,
            "fill":"white"
          }
        }
      },
      {
        "transform": [
          {
            "window": [{"op": "rank", "as": "ranking"}],
            "sort": [{"field": "population", "order": "descending"}]
          },
          {"filter": "datum['country'] == 'Indonesia' && datum.year == 2000 && Country_selection == 'Indonesia'"},
          {
            "calculate": "'Year: 2000;The only year when Indonesia had a;  decrease of population density'",
            "as": "text_annotation_raw"
          },
          {
            "calculate": "split(datum.text_annotation_raw, ';')",
            "as": "text_annotation"
          }
        ],
        "mark": {
          "type": "text",
          "align": "center",
          "dx": -8,
          "dy": -30,
          "baseline": "middle",
          "fontStyle": "italic",
          "fontSize": 8,
          "fontWeight": "bold"
        },
        "encoding": {
          "text": {"field": "text_annotation"},
          "color": {"value": "black"}
        }
      }
      ]
      ,
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "population_density",
          "type": "quantitative",
          "title": "Population Density"
        },
        "color": {
          "field": "country",
          "condition": {
            "test": "datum['country'] == 'Indonesia'",
            "value": "red"
          }
        },
        "opacity":{
          "condition":{
            "test": "datum['country'] == Country_selection",
            "value": 1
          },
          "value":0.1
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "population_density", "type": "quantitative", "title":"Population Density"}
        ]
      },
      "transform": [
        {"filter": "datum.year > '1960' && datum.year <= 2020"},
        {"filter": "datum.year >= Start_year && datum.year <= End_year"}
      ]
  }, 
  {
    "title":"Current population (2020)",
    "width":500,
    "height": 600,
    "layer": [
      {"mark": {
        "type": "bar"
      },
      "encoding": {
        "x": {
          "field": "country",
          "type": "ordinal",
          "sort": "y"
        },
        "y": {
          "field": "population",
          "type": "quantitative"
        },
        "color": {
          "condition":{
            "test": "datum['country'] == Country_selection",
            "value": "#89CFF0"
          },
          "value": "grey"
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "population", "type": "quantitative", "title": "Population"}
        ]
      },
      "transform": [
        {"filter": "datum.year == Population_year"}
      ]},
      {
        "mark": {
          "type": "text",
          "align": "center",
          "dy": 250,
          "dx": 90,
          "fontWeight":"bold",
          "baseline": "middle",
          "fontStyle": "italic",
          "fontSize": 10
        },
        "transform": [
          {
            "filter": "datum.country == 'Indonesia' && datum.year == Population_year"
          },
          {
            "calculate": "'Indonesia has a population ;of ' + datum['population']",
            "as": "text_annotation_raw"
          },
          {
            "calculate": "split(datum.text_annotation_raw, ';')",
            "as": "text_annotation"
          }
        ],
        "encoding": {"text": {"field": "text_annotation"}}
      }
    ]
  }
  ]
}